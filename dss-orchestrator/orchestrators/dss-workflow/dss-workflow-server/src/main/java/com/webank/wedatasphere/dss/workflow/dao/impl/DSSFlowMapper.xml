<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.webank.wedatasphere.dss.workflow.dao.DSSFlowMapper">

    <select id="getExecutionHistoryByFlowId" parameterType="java.lang.Long" resultType="com.webank.wedatasphere.dss.orchestrator.common.entity.response.ExecutionHistoryVo">
        SELECT id, err_desc errorMessage, status, DATE_FORMAT(created_time,'%Y-%m-%d %T') startTime, err_code errorCode,
        (case
        when updated_time is null or created_time is null then 0
        when updated_time is not null and created_time is not null then UNIX_TIMESTAMP(updated_time) - UNIX_TIMESTAMP(created_time)
        end) as duration, log_path logPath
        FROM `dss_workflow_task`
        <where>
            <if test="flowId != null and flowId != ''">
                <bind name="flowIdPattern" value="'{&quot;flowId&quot;:' + flowId + ',%'"/>
                execution_code like #{flowIdPattern}
            </if>
        </where>
        order by id desc
    </select>

    <select id="getLastExecutionHistoryByFlowId" parameterType="java.lang.Long" resultType="com.webank.wedatasphere.dss.workflow.entity.WorkflowTaskVO">
        SELECT id,execution_code,status,params FROM `dss_workflow_task`
        <where>
            <if test="flowId != null and flowId != ''">
                <bind name="flowIdPattern" value="'{&quot;flowId&quot;:' + flowId + ',%'"/>
                execution_code like #{flowIdPattern}
            </if>
        </where>
        order by id desc limit 1
    </select>
</mapper>