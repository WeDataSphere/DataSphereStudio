<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.webank.wedatasphere.dss.apiservice.core.dao.ApiServiceVersionDao">

    <resultMap id="apiVersionMap" type="com.webank.wedatasphere.dss.apiservice.core.vo.ApiVersionVo">
        <result property="id" column="id"/>
        <result property="apiId" column="api_id"/>
        <result property="version" column="version"/>
        <result property="bmlResourceId" column="bml_resource_id"/>
        <result property="bmlVersion" column="bml_version"/>
        <result property="source" column="source"/>
        <result property="creator" column="creator"/>
        <result property="createTime" column="create_time"/>
        <result property="status" column="status"/>
        <result property="metadataInfo" column="metadata_info"/>
        <result property="authId" column="auth_id"/>
        <result property="executeUser" column="execute_user"/>
        <result property="description" column="description"/>
        <result property="comment" column="comment"/>
    </resultMap>

    <sql id="fields">
        `api_id`,`version`,`bml_resource_id`,`bml_version`,`source`,`creator`,`create_time`,`status`,
        `metadata_info`, `auth_id`, `execute_user`, `description`, `comment`
    </sql>

    <sql id="fields_query">
        `id`,`api_id`,`version`,`bml_resource_id`,`bml_version`,`source`,`creator`,`create_time`,`status`,
        `metadata_info`, `auth_id`, `execute_user`, `description`, `comment`
    </sql>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.webank.wedatasphere.dss.apiservice.core.vo.ApiVersionVo">
        <![CDATA[INSERT INTO
         `dss_apiservice_api_version`(]]>
        <include refid="fields"/>
        <![CDATA[) VALUES
            (#{apiId}, #{version}, #{bmlResourceId}, #{bmlVersion}, #{source}, #{creator}, #{createTime}, #{status}, #{metadataInfo},
            #{authId}, #{executeUser}, #{description}, #{comment}
            )]]>
    </insert>

    <select id="queryApiVersionByVersionId" parameterType="Long" resultMap="apiVersionMap">
        <![CDATA[SELECT]]>
        <include refid="fields_query"/>
        <![CDATA[FROM
            `dss_apiservice_api_version`
        WHERE
            id = #{id}
        ]]>
    </select>

    <select id="queryApiVersionByApiServiceId" parameterType="Long" resultMap="apiVersionMap">
        <![CDATA[SELECT]]>
        <include refid="fields_query"/>
        <![CDATA[FROM
            `dss_apiservice_api_version`
        WHERE
            api_id = #{api_id}
        ]]>
    </select>
    <select id="queryApiVersion" resultType="com.webank.wedatasphere.dss.apiservice.core.vo.ApiVersionVo">
        <![CDATA[SELECT]]>
        <include refid="fields_query"/>
        <![CDATA[FROM
            `dss_apiservice_api_version`
        ]]>
    </select>

    <update id="updateApiVersionStatusById">
        UPDATE `dss_apiservice_api_version`
        SET `status` = #{status}
        WHERE id = #{id}
    </update>

    <update id="updateApiVersionStatusBeforeId">
        UPDATE `dss_apiservice_api_version`
        SET `status` = #{status}
        WHERE api_id = #{apiId} and id <![CDATA[ < ]]> #{id}
    </update>

    <update id="updateAuthIdByapiVersionId">
        UPDATE `dss_apiservice_api_version`
        SET `auth_id` = #{authId}
        WHERE id = #{id}
    </update>

    <update id="disableApiVersionStatusByApiId">
        UPDATE `dss_apiservice_api_version`
        SET `status` = 0
        WHERE
        api_id = #{api_id}
    </update>

    <update id="updateApiVersionInfoById" parameterType="com.webank.wedatasphere.dss.apiservice.core.vo.ApiVersionVo">
        <![CDATA[UPDATE `dss_apiservice_api_version`]]>
        <set>
            <if test="metadataInfo != null and metadataInfo != ''">
                <![CDATA[ `metadata_info` = #{metadataInfo}, ]]>
            </if>
            <if test="version != null and version != ''">
                <![CDATA[ `version` = #{version}, ]]>
            </if>
            <if test="bmlResourceId != null and bmlResourceId != ''">
                <![CDATA[ `bml_resource_id` = #{bmlResourceId}, ]]>
            </if>
            <if test="bmlVersion != null and bmlVersion != ''">
                <![CDATA[ `bml_version` = #{bmlVersion}, ]]>
            </if>
            <if test="createTime != null">
                <![CDATA[ `create_time` = #{createTime}, ]]>
            </if>
            <if test="source != null and source != ''">
                <![CDATA[ `source` = #{source}, ]]>
            </if>
            <if test="executeUser != null and executeUser != ''">
                <![CDATA[ `execute_user` = #{executeUser}, ]]>
            </if>
            <if test="creator != null">
                <![CDATA[ `creator` = #{creator}, ]]>
            </if>
            <if test="creator != null">
                <![CDATA[ `description` = #{description}, ]]>
            </if>
            <if test="creator != null">
                <![CDATA[ `comment` = #{comment} ]]>
            </if>
        </set>
        <where>
            `id` = #{id}
        </where>
    </update>

    <update id="updateAllApiVersionStatusByApiServiceId">
        UPDATE `dss_apiservice_api_version`
        SET `status` = #{status}
        WHERE api_id = #{api_id}
    </update>
    <update id="updateBmlResourceIdAndBmlVersionById">
        UPDATE `dss_apiservice_api_version`
        SET `version` = #{version}, `bml_resource_id` = #{bmlResourceId} , `bml_version` = #{bmlVersion}
        WHERE id = #{id}
    </update>


    <delete id="deleteApiVersionById" parameterType="Long">
        DELETE FROM
        `dss_apiservice_api_version`
        WHERE
        id = #{id}
    </delete>


</mapper>