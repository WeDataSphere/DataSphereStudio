<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.webank.wedatasphere.dss.framework.release.dao.ReleaseTaskMapper">

    <resultMap id="taskInfo" type="com.webank.wedatasphere.dss.framework.release.entity.task.ReleaseTask">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="project_id" property="projectId" jdbcType="BIGINT"/>
        <result column="orchestrator_version_id" property="orchestratorVersionId" jdbcType="BIGINT"/>
        <result column="orchestrator_id" property="orchestratorId" jdbcType="BIGINT"/>
        <result column="release_user" property="releaseUser" jdbcType="LONGVARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="status" property="status" jdbcType="VARCHAR"/>
        <result column="instance_name" property="instanceName" jdbcType="VARCHAR"/>
        <result column="error_msg" property="errorMsg" jdbcType="LONGVARCHAR"/>
        <result column="comment" property="comment" jdbcType="LONGVARCHAR"/>
    </resultMap>


    <sql id="release_task_main">
        `id`, `project_id`, `orchestrator_version_id`, `orchestrator_id`,
        `release_user`, `create_time`, `update_time`, `status`, instance_name, error_msg,comment
    </sql>


    <insert id="insertReleaseTask" useGeneratedKeys="true" keyProperty="id"
            parameterType="com.webank.wedatasphere.dss.framework.release.entity.task.ReleaseTask">
        INSERT INTO dss_release_task (<include refid="release_task_main"/>)
        VALUES
        (#{id}, #{projectId}, #{orchestratorVersionId}, #{orchestratorId}, #{releaseUser}, #{createTime}, #{updateTime},
        #{status}, #{instanceName}, #{errorMsg},#{comment})
    </insert>


    <!--更新releaseTask的状态和更新时间-->
    <update id="updateReleaseTask"
            parameterType="com.webank.wedatasphere.dss.framework.release.entity.task.ReleaseTask">
        UPDATE dss_release_task
        <trim prefix="set" suffixOverrides=",">
            <if test="status != null">status = #{status},</if>
            <if test="orchestratorVersionId != null">orchestrator_version_id = #{orchestratorVersionId},</if>
            <if test="errorMsg != null">error_msg = #{errorMsg},</if>
            <if test="comment != null">comment = #{comment},</if>
            <if test="logMsg != null">log_msg = #{logMsg},</if>
            <if test="bak != null">bak = #{bak},</if>
            <if test="updateTime != null">update_time = #{updateTime}</if>
        </trim>
        WHERE id = #{id}
    </update>

    <update id="batchUpdateReleaseJob" parameterType="java.util.List">
        UPDATE dss_release_task set error_msg =
        <foreach collection="failedJobs" item="item" index="index"
                 separator=" " open="case" close="end,">
            when id = #{item.id} then #{item.errorMsg}
        </foreach>
        status =
        <foreach collection="failedJobs" item="item" index="index"
                 separator=" " open="case" close="end,">
            when id = #{item.id} then #{item.status}
        </foreach>
        update_time =
        <foreach collection="failedJobs" item="item" index="index"
                 separator=" " open="case" close="end">
            when id = #{item.id} then #{item.updateTime}
        </foreach>
        WHERE id in
        <foreach collection="failedJobs" item="item" index="index" separator="," open="(" close=")">
            #{item.id}
        </foreach>
    </update>

    <select id="getReleaseTask" resultMap="taskInfo" parameterType="java.lang.Long">
        select * from dss_release_task where id = #{taskId}
    </select>

    <select id="getReleaseTaskByOrcId" resultType="java.lang.Integer" parameterType="java.lang.Long">
        SELECT count(*) FROM dss_release_task
        WHERE project_id = (SELECT project_id FROM dss_orchestrator_info WHERE id = #{orchestratorId})
        AND STATUS IN ('Inited','Running') AND create_time > NOW()-INTERVAL 30 MINUTE
    </select>

    <select id="getReleaseHistoryByOrchestratorId" parameterType="com.webank.wedatasphere.dss.orchestrator.common.protocol.RequestPublishHistory"
            resultType="com.webank.wedatasphere.dss.orchestrator.common.entity.ReleaseHistoryDetail">
        SELECT a.id, a.status, a.comment recode, a.release_user releaseUser, b.version,
        b.updater lastModifyUser, DATE_FORMAT(a.update_time,'%Y-%m-%d %T') AS releaseTime,
        a.error_msg errorMessage,a.orchestrator_version_id orchestratorVersionId,
        a.bak,a.log_msg logMsg,b.app_id appId
        FROM dss_release_task a
        LEFT JOIN dss_orchestrator_version_info b
        ON a.orchestrator_version_id = b.id
        where a.orchestrator_id = #{orchestratorId}
        <if test="comment != null and comment != ''"> and a.comment like concat('%',#{comment},'%') </if>
        <if test="releaseUser != null and releaseUser != ''"> and a.release_user = #{releaseUser}  </if>
        <if test="startTime != null and startTime != '' and endTime != null and endTime != ''">
            and a.create_time BETWEEN CONCAT(#{startTime},' 00:00:00') AND CONCAT(#{endTime},' 23:59:59')
        </if>
        and b.context_id != ''
        order by a.id desc
    </select>

    <select id="getReleaseTaskByStatus"
            resultType="com.webank.wedatasphere.dss.framework.release.entity.task.ReleaseTask">
        SELECT * FROM `dss_release_task` WHERE status in
        <foreach item="item" index="index" collection="statuses" open="(" separator="," close=" )">
            #{item}
        </foreach>
    </select>

</mapper>