<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.webank.wedatasphere.dss.framework.appconn.dao.DssWorkflowNodeGroupDAO">
    <resultMap id="BaseResultMap" type="com.webank.wedatasphere.dss.framework.appconn.entity.NodeGroup">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="name_en" jdbcType="VARCHAR" property="nameEn"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="order" jdbcType="TINYINT" property="order"/>
    </resultMap>

    <insert id="insert" parameterType="com.webank.wedatasphere.dss.framework.appconn.entity.NodeGroup"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO dss_workflow_node_group(id,name,name_en,description,order)
        VALUES (#{id},#{name},#{nameEn},#{description},#{order})
    </insert>

    <update id="update" parameterType="com.webank.wedatasphere.dss.framework.appconn.entity.NodeGroup">
        UPDATE dss_workflow_node_group
        SET name=#{name},name_en=#{nameEn},description=#{description},order=#{order}
        WHERE id=#{id}
    </update>

    <select id="findByPrimaryKey" resultMap="BaseResultMap">
        SELECT id,name,name_en,description,order FROM dss_workflow_node_group
        WHERE id=#{id}
    </select>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT id,name,name_en,description,order FROM dss_workflow_node_group
    </select>
    <delete id="deleteByPrimaryKey">
        DELETE FROM dss_workflow_node_group
        WHERE id=#{id}
    </delete>

</mapper>